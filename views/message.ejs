<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Messages</title>
    <link rel="stylesheet" href="stylesheets/message.css" />
  </head>
  <body>
    <%- include('_header.ejs') %>

    <main>
      <h1>Messages</h1>
      <table>
        <thead>
          <tr>
            <th>Sender</th>
            <th>Project Title</th>
            <th>Message</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% messages.forEach(message => { %>
          <tr>
            <td><%= message.username %></td>
            <td><%= message.title %></td>
            <td><%= message.content %></td>
            <td>
              <%= new Date(message.timestamp).toLocaleString({ month: 'long' })
              %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
    <script>
      const newMessages = <%- JSON.stringify(locals.messages) %>;
      console.log(newMessages);
    </script>
    <%- include('_footer.ejs') %>
  </body>
</html>
