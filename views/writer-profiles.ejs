<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Writer Results</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="shortcut icon" href="/images/logo1.png" type="image/x-icon" />
  </head>
  <body>
    <%- include('_header.ejs') %>
    <% if (typeof req.session.message !== 'undefined') { %>
        <div class="alert alert-success">
          <%= req.session.message %>
        </div>
      <% } %>
      <h1>Writer Profile</h1>
      <form>
        <div class="form-group">
          <label for="bio">Bio:</label>
          <textarea class="form-control" id="bio" disabled><%= req.body.bio %></textarea>
        </div>
        <div class="form-group">
          <label for="experience_level">Experience Level:</label>
          <input type="text" class="form-control" id="experience_level" value="<%= req.body.experience_level %>" disabled>
        </div>
        <div class="form-group">
          <label for="specialization">Specialization:</label>
          <input type="text" class="form-control" id="specialization" value="<%= req.body.specialization %>" disabled>
        </div>
        <div class="form-group">
          <label for="portfolio_url">Portfolio URL:</label>
          <a href="<%= req.body.portfolio_url %>" target="_blank" class="form-control" id="portfolio_url" disabled><%= req.body.portfolio_url %></a>
        </div>
        <div class="form-group">
          <label for="hourly_rate">Hourly Rate:</label>
          <input type="number" class="form-control" id="hourly_rate" value="<%= req.body.hourly_rate %>" disabled>
        </div>
      <a href="/edit-writer-profile" class="btn btn-primary">Edit Profile</a>
      </form> 
    <%- include('_footer.ejs') %>
  </body>
</html>

